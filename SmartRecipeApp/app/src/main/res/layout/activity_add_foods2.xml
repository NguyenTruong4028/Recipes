<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFEFC"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_rounded_pink"
                android:src="@android:drawable/ic_delete"
                app:elevation="2dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Công thức mới"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/colorprimary"
                android:gravity="center"/>

            <View android:layout_width="40dp" android:layout_height="40dp"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardUploadImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFF0F0">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgRecipePreview"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@android:drawable/ic_menu_camera"
                    app:tint="#FF5252"/>

                <TextView
                    android:id="@+id/tvPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thêm ảnh"
                    android:textColor="#FF5252"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/imgRealPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="gone"/>
        </androidx.cardview.widget.CardView>

        <TextView
            style="@style/LabelStyle"
            android:text="Tên món ăn"
            android:layout_marginTop="24dp"/>
        <EditText
            android:id="@+id/edtRecipeName"
            style="@style/InputStyle"
            android:hint="Gà kho sả"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="4dp"
                >
                <TextView style="@style/LabelStyle" android:text="Thời gian (phút)"/>
                <EditText
                    android:background="@drawable/bg_rounded_pink"
                    android:id="@+id/edtTime"
                    style="@style/InputStyle"
                    android:inputType="number"
                    android:hint="30"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginHorizontal="4dp">
                <TextView style="@style/LabelStyle" android:text="Khẩu phần"/>
                <EditText
                    android:background="@drawable/bg_rounded_pink"
                    android:id="@+id/edtServes"
                    style="@style/InputStyle"
                    android:inputType="number"
                    android:hint="2 người"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="4dp">
                <TextView style="@style/LabelStyle" android:text="Độ khó"/>
                <Spinner
                    android:id="@+id/spinnerDifficulty"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_spinner_custom"
                    android:paddingStart="12dp"
                    android:paddingEnd="40dp"
                    android:overlapAnchor="false"
                    android:spinnerMode="dropdown"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/LabelStyle"
            android:text="Nguyên liệu"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:id="@+id/layoutIngredientsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddIngredientLine"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="+ Thêm nguyên liệu"
            android:textColor="#FF5252"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_gravity="start"/>

        <TextView
            style="@style/LabelStyle"
            android:text="Cách nấu"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:id="@+id/layoutStepsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddStepLine"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="+ Thêm bước"
            android:textColor="#FF5252"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_gravity="start"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPublish"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Đăng tải món ăn"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="30dp"
            app:backgroundTint="#FF5252"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</ScrollView>